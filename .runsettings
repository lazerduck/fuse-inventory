<?xml version="1.0" encoding="utf-8"?>
<RunSettings>
  <DataCollectionRunSettings>
    <DataCollectors>
      <DataCollector friendlyName="XPlat code coverage">
        <Configuration>
          <Format>cobertura</Format>
          <Exclude>
            [Fuse.Tests]*,
            [Fuse.API.Tests]*,
            [*.Tests]*,
            [xunit*]*,
            [Moq]*
          </Exclude>
          <Include>
            [Fuse.API]*,
            [Fuse.Core]*,
            [Fuse.Data]*
          </Include>
          <UseSourceLink>true</UseSourceLink>
          <SingleHit>false</SingleHit>
        </Configuration>
      </DataCollector>
    </DataCollectors>
  </DataCollectionRunSettings>
</RunSettings>
