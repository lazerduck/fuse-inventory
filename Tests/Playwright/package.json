{
  "name": "playwright",
  "version": "1.0.0",
  "description": "Playwright tests for Fuse Inventory",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "report": "playwright show-report",
    "docker:up": "docker compose -f docker-compose.test.yaml up --build -d",
    "docker:down": "docker compose -f docker-compose.test.yaml down",
    "docker:clean": "docker compose -f docker-compose.test.yaml down -v --remove-orphans && rm -rf test-data/*",
    "pretest:ci": "npm run docker:up",
    "posttest:ci": "npm run docker:clean"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/node": "^24.10.1"
  }
}
